<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="NSModCreator.Error"
        Title="Error" Background="White" Width="400" Height="200" WindowStartupLocation="CenterScreen" HasSystemDecorations="False" Topmost="True"> 
  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
    <TextBlock FontSize="30" Foreground="#ffcb2e">Fields filled out incorrectly!</TextBlock>
    <Button Margin="0,10,0,0" Click="OnOkClick" Width="200" Padding="10" Background="#ffcb2e" HorizontalAlignment="Center">
      <TextBlock HorizontalAlignment="Center">OK</TextBlock>
    </Button>
  </StackPanel>
</Window>
